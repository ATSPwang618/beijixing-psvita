<!-- 
    主界面活动XML布局文件 (main.xml)
    
    这个文件定义了整个演示程序的主界面布局，就像是一张建筑设计图
    
    主要结构：
    1. AppletFrame - 应用程序框架（就像窗户的框架）
    2. TabFrame - 标签页框架（就像文件夹的标签）
    3. 多个Tab - 各种功能标签页（就像书本的不同章节）
    
    每个标签页展示不同的UI组件和功能：
    - 组件展示：按钮、滑条等基础组件
    - 布局演示：如何排列界面元素
    - 变换效果：图形变换动画
    - 文本测试：文字显示效果
    - 滚动测试：长内容的滚动展示
    - 宝可梦图鉴：列表和数据展示
    - 设置页面：各种设置选项
    - 关于页面：程序信息展示
    
    这就像是一个功能齐全的展示厅，每个房间展示不同的内容
-->

<brls:AppletFrame
    iconInterpolation="linear"
    footerHidden="false">
    
    <!-- TabFrame是整个标签页系统的容器，就像是一个大书架 -->
    <brls:TabFrame
        title="@i18n/demo/title"
        icon="@res/img/borealis_96.png">

        <!-- 
            动态标签页 - 组件展示 
            这个标签页展示各种UI组件的使用方法
            ComponentsTab是在C++代码中定义的，提供交互功能
        -->
        <brls:Tab label="@i18n/demo/tabs/components" >
            <ComponentsTab />
        </brls:Tab>

        <!-- 
            静态标签页 - 布局演示
            这个标签页展示如何排列界面元素
            内容直接从另一个XML文件加载，展示XML的模块化设计
        -->
        <brls:Tab label="@i18n/demo/tabs/layout" >
            <brls:View xml="@res/xml/tabs/layout.xml" />
        </brls:Tab>

        <!-- 
            变换效果标签页
            展示2D图形变换：旋转、缩放、倾斜等
            就像是一个魔法变换工作台
        -->
        <brls:Tab label="@i18n/demo/tabs/transform" >
            <TransformTab />
        </brls:Tab>

        <!-- 
            文本测试标签页
            展示文字的各种显示效果和对齐方式
            就像是一个文字排版实验室
        -->
        <brls:Tab label="@i18n/demo/tabs/text" >
            <TextTestTab />
        </brls:Tab>

        <!-- 分隔线 - 将标签页分组，让界面更整齐 -->
        <brls:Separator />

        <!-- 
            滚动测试标签页
            展示长内容的滚动效果
            就像是一个很长的卷轴，可以上下滚动查看
        -->
        <brls:Tab label="@i18n/demo/tabs/scroll" >
            <brls:View xml="@res/xml/tabs/scroll_test.xml" />
        </brls:Tab>

        <!-- 
            宝可梦图鉴标签页
            展示循环列表的使用，高效显示大量数据
            就像是一个智能的图书管理系统
        -->
        <brls:Tab label="@i18n/demo/tabs/pokedex">
            <RecyclingListTab />
        </brls:Tab>

        <!-- 另一个分隔线 -->
        <brls:Separator />

        <!-- 
            设置标签页
            展示各种设置组件：开关、输入框、滑条等
            就像是手机里的"设置"应用
        -->
        <brls:Tab label="@i18n/demo/tabs/settings">
            <SettingsTab />
        </brls:Tab>

        <!-- 
            以下是被注释掉的标签页
            在开发过程中，有时会暂时禁用某些功能
            就像是暂时关闭展示厅的某些房间
        -->
        <!--        <brls:Separator />-->
        <!--        <brls:Tab label="@i18n/demo/tabs/popups" />-->
        <!--        <brls:Tab label="@i18n/demo/tabs/hos_layout" />-->
        <!--        <brls:Separator />-->
        <!--        <brls:Tab label="@i18n/demo/tabs/misc_layouts" />-->
        <!--        <brls:Tab label="@i18n/demo/tabs/misc_components" />-->
        <!--        <brls:Tab label="@i18n/demo/tabs/misc_tools" />-->

        <brls:Separator />

        <!-- 
            关于页面 - 内联XML定义
            这个标签页直接在这里定义内容，而不是引用外部文件
            展示了程序的信息、版权和致谢
        -->
        <brls:Tab label="@i18n/demo/tabs/about" >

            <!-- 
                主容器盒子 - 垂直排列所有内容
                axis="column" 表示子元素垂直排列（从上到下）
                就像是把物品垂直叠放在盒子里
            -->
            <brls:Box
                width="auto"
                height="auto"
                axis="column"
                paddingTop="@style/about/padding_top_bottom"
                paddingBottom="@style/about/padding_top_bottom"
                paddingLeft="@style/about/padding_sides"
                paddingRight="@style/about/padding_sides" >

                <!-- 
                    程序图标 
                    显示Borealis的Logo，占据33%的高度
                -->
                <brls:Image
                    width="auto"
                    height="33%"
                    image="@res/img/borealis_256.png"
                    marginBottom="@style/about/description_margin"/>

                <!-- 
                    标题和描述区域
                    axis="row" 表示子元素水平排列（从左到右）
                    就像是把两本书并排放在桌子上
                -->
                <brls:Box
                    width="auto"
                    height="auto"
                    axis="row"
                    marginBottom="@style/about/description_margin">

                    <!-- 
                        程序标题
                        显示在左侧，占40%宽度，右对齐
                    -->
                    <brls:Label
                        width="40%"
                        height="auto"
                        text="@i18n/demo/about/title"
                        fontSize="36"
                        horizontalAlign="right"
                        verticalAlign="top" />

                    <!-- 
                        程序描述
                        显示在右侧，宽度自动，左对齐
                    -->
                    <brls:Label
                        width="auto"
                        height="auto"
                        text="@i18n/demo/about/description"
                        marginLeft="@style/about/description_margin" />

                </brls:Box>

                <!-- 
                    底部信息区域
                    显示GitHub链接、许可证和Logo致谢
                    justifyContent="spaceEvenly" 表示子元素均匀分布
                    就像是把三个物品在盒子里平均摆放
                -->
                <brls:Box
                    width="auto"
                    height="auto"
                    axis="column"
                    alignItems="center"
                    justifyContent="spaceEvenly"
                    grow="1.0" >

                    <!-- GitHub仓库链接 -->
                    <brls:Label
                        width="auto"
                        height="auto"
                        text="@i18n/demo/about/github" />

                    <!-- 许可证信息 -->
                    <brls:Label
                        width="auto"
                        height="auto"
                        text="@i18n/demo/about/licence" />

                    <!-- Logo设计致谢 -->
                    <brls:Label
                        width="auto"
                        height="auto"
                        text="@i18n/demo/about/logo_credit" />

                </brls:Box>

            </brls:Box>

        </brls:Tab>

    </brls:TabFrame>
</brls:AppletFrame>
