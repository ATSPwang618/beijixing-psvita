<!-- 
    主界面活动XML布局文件 (main.xml)
    
    这个文件定义了整个演示程序的主界面布局，就像是一张建筑设计图
    
    主要结构：
    1. AppletFrame - 应用程序框架（就像窗户的框架）
    2. TabFrame - 标签页框架（就像文件夹的标签）
    3. 多个Tab - 各种功能标签页（就像书本的不同章节）
    
    每个标签页展示不同的UI组件和功能：
    - 组件展示：按钮、滑条等基础组件
    - 布局演示：如何排列界面元素
    - 变换效果：图形变换动画
    - 文本测试：文字显示效果
    - 滚动测试：长内容的滚动展示
    - 宝可梦图鉴：列表和数据展示
    - 设置页面：各种设置选项
    - 关于页面：程序信息展示
    
    这就像是一个功能齐全的展示厅，每个房间展示不同的内容
-->

<brls:AppletFrame
    iconInterpolation="linear"
    footerHidden="false">
    
    <!-- TabFrame是整个标签页系统的容器，就像是一个大书架 -->
    <brls:TabFrame
        title="网易云音乐"
        icon="@res/img/borealis_96.png">

        <!-- 1 -->
        <brls:Tab label="热门首页" >
        <ComponentsTab />
        </brls:Tab>

        <!-- 2 -->
        <brls:Tab label="私人电台" >
        <TransformTab />
        </brls:Tab>
        <brls:Separator />

        <!-- 3 -->
        <brls:Tab label="正在播放" >
        <brls:View xml="@res/xml/page-music/播放页面.xml" />
        </brls:Tab>
        

        <!-- 4 -->
        <brls:Tab label="歌曲名单">
        <RecyclingListTab />
        </brls:Tab>
        <brls:Separator />

        <!-- 5 -->
        <brls:Tab label="播放歌词" >
        <brls:View xml="@res/xml/page-music/歌词.xml" />
        </brls:Tab>

        <!-- 6 -->
        <brls:Tab label="个人中心" >
        <brls:View xml="@res/xml/page-music/个人中心.xml" />
        </brls:Tab>
        <brls:Separator />
        
        <!-- 7 -->
        <brls:Tab label="应用设置">
        <!--<brls:View xml="@res/xml/page-music/设置界面.xml" /> -->
        <SettingsTab /> 
        </brls:Tab>
        

        <!-- 8 关于页面 -->
        <brls:Tab label="关于应用" >
            <!-- 
                主容器盒子 - 垂直排列所有内容
                axis="column" 表示子元素垂直排列（从上到下）
                就像是把物品垂直叠放在盒子里
            -->
            <brls:Box
                width="auto"
                height="auto"
                axis="column"
                paddingTop="@style/about/padding_top_bottom"
                paddingBottom="@style/about/padding_top_bottom"
                paddingLeft="@style/about/padding_sides"
                paddingRight="@style/about/padding_sides" >

                <!-- 
                    程序图标 
                    显示Borealis的Logo，占据33%的高度
                -->
                <brls:Image
                    width="auto"
                    height="33%"
                    image="@res/img/borealis_256.png"
                    marginBottom="@style/about/description_margin"/>

                <!-- 
                    标题和描述区域
                    axis="row" 表示子元素水平排列（从左到右）
                    就像是把两本书并排放在桌子上
                -->
                <brls:Box
                    width="auto"
                    height="auto"
                    axis="row"
                    marginBottom="@style/about/description_margin">

                    <!-- 
                        程序标题
                        显示在左侧，占40%宽度，右对齐
                    -->
                    <brls:Label
                        width="40%"
                        height="auto"
                        text="网易云音乐"
                        fontSize="36"
                        horizontalAlign="right"
                        verticalAlign="top" />

                    <!-- 
                        程序描述
                        显示在右侧，宽度自动，左对齐
                    -->
                    <brls:Label
                        width="auto"
                        height="auto"
                        text="ver1.0.0"
                        marginLeft="@style/about/description_margin" />

                </brls:Box>

                <brls:Box
                    width="auto"
                    height="auto"
                    axis="column"
                    alignItems="center"
                    justifyContent="spaceEvenly"
                    grow="1.0" >

                    <!-- GitHub仓库链接 -->
                    <brls:Label
                        width="auto"
                        height="auto"
                        text="发现好音乐" />

                    <!-- 许可证信息 -->
                    <brls:Label
                        width="auto"
                        height="auto"
                        text="动心音乐时刻与您相伴" />

                    <!-- Logo设计致谢 -->
                    <brls:Label
                        width="auto"
                        height="auto"
                        text="总有一句，唱的是你的心事" />

                </brls:Box>

            </brls:Box>

        </brls:Tab>

    </brls:TabFrame>
</brls:AppletFrame>
